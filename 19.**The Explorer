using System;

class TheExplorer
{
    static void Main()
    {
        int n = int.Parse(Console.ReadLine());
        int asteriskNum = 1;
        string asterisk = new string('*', asteriskNum);
        string dash = new string('-', (n - asteriskNum) / 2);
            Console.Write(dash);
            Console.Write(asterisk);
            Console.Write(dash);
            Console.WriteLine();
            int dashMiddleNum = 1;
            asteriskNum++;
            for (int i = 0; i < n/2-1; i++)
            {  
                string dashMiddle=new string('-',dashMiddleNum);
                dash = new string('-', (n - asteriskNum-dashMiddleNum) / 2);
                Console.Write(dash);
                Console.Write(asterisk);
                Console.Write(dashMiddle);
                Console.Write(asterisk);
                Console.Write(dash);
                dashMiddleNum = dashMiddleNum + 2;
                Console.WriteLine();  
            }
            string dashCenter = new string('-', n - asteriskNum);
            Console.Write(asterisk);
            Console.Write(dashCenter);
            Console.WriteLine(asterisk);
            for (int i = 0; i < n / 2 - 1; i++)
            {
                dashMiddleNum = dashMiddleNum - 2;
                string dashMiddle = new string('-', dashMiddleNum);
                dash = new string('-', (n - asteriskNum - dashMiddleNum) / 2);
                Console.Write(dash);
                Console.Write(asterisk);
                Console.Write(dashMiddle);
                Console.Write(asterisk);
                Console.Write(dash);
                Console.WriteLine();
            }
            asteriskNum--;
            dash = new string('-', (n - asteriskNum) / 2);
            Console.Write(dash);
            Console.Write(asterisk);
            Console.Write(dash);
            Console.WriteLine();
    }
}

