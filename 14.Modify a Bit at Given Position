using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Enter number n,bit p and value v:");
        int n = int.Parse(Console.ReadLine());
        int p = int.Parse(Console.ReadLine());
        int v = int.Parse(Console.ReadLine());
        int nRightP = n >> p;     
        int bit = nRightP & 1;     
        if ((bit==1||bit==0)&&v==1)
        {
            int result = n |(1<<p);
            Console.WriteLine(result);
        }
        else if((bit==0||bit==1)&&v==0)
        {
            int result = n &( ~(1 << p));       
            Console.WriteLine(result);
        }

    }
}

