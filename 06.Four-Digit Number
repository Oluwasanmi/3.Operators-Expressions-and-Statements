using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Enter four digit number:");
        int n = int.Parse(Console.ReadLine());
        if (n<1000)
        {
            Console.WriteLine("The number is out of range!");
            return;
        }
        int tousandths = n / 10;
        int remainderTousandths = n% 10;
        int hundred = tousandths / 10;
        int remainderHundred = tousandths % 10;
        int tenths = hundred / 10;
        int remainderTenths = hundred% 10;
        int remainderUnits = tenths % 10;
        Console.WriteLine("Sum of digits:{0}", remainderTousandths+
           +remainderHundred + remainderTenths + remainderUnits);
        Console.WriteLine("Reversed: {0}{1}{2}{3}",remainderTousandths,
            remainderHundred, remainderTenths,remainderUnits);
        Console.WriteLine("Last digit in front:{0}{1}{2}{3}",
        remainderTousandths,remainderUnits,remainderTenths,remainderHundred);
        Console.WriteLine("Second and third digits exchanged:{0}{1}{2}{3}",
        remainderUnits, remainderHundred, remainderTenths, remainderTousandths);
    }
}

