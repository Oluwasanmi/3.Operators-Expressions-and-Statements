using System;

class Trapezoids
{
    static void Main()
    {
        Console.WriteLine("Enter side a, b and the heigh h na trapezoid:");
        double aSide = double.Parse(Console.ReadLine());
        double bSide = double.Parse(Console.ReadLine());
        double hSide = double.Parse(Console.ReadLine());
        Console.WriteLine("Trapezoid's area:{0}", (aSide+bSide)*hSide/2);
    }
}

