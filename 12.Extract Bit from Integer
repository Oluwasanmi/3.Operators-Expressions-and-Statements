using System;

class DisplayBitPByGivenNumber
{
    static void Main()
    {
        Console.WriteLine("Enter number n and bit p:");
        int n = int.Parse(Console.ReadLine());
        int p = int.Parse(Console.ReadLine());
        int nRightP = n >> p;
        int bit = nRightP & 1;
        Console.WriteLine(bit);    
    }
}


